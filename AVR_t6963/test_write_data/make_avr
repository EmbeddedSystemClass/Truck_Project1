# GCC/Linux compile flags
GNUCC = gcc
GNUCFLAGS = -Wall -std=gnu99 -Wstrict-prototypes -DTEST_WRITE_DATA -DSIM_AVR
#GNUCFLAGS =  -std=gnu99 -Wstrict-prototypes -DTEST_WRITE_DATA
GNULDFLAGS = -static
GNUSFLAGS = -D_SVID_SOURCE -D_XOPEN_SOURCE
GNUNOANSI = -Wall -std=gnu99 -Wstrict-prototypes 

#####################################################
CC = ${GNUCC}
NOANSI = ${GNUNOANSI}
CFLAGS = ${GNUCFLAGS}
LDFLAGS = ${GNULDFLAGS}
#SFLAGS = ${GNUSFLAGS}
SFLAGS = -DDEBUG

all: sim_read

t6963.o : ../t6963.c
	${CC} -c ${CFLAGS} ${SFLAGS} -o t6963.o ../t6963.c

AVR_menu.o : ../AVR_menu.c ../avr_main.h ../main.h
	${CC} -c ${CFLAGS} ${SFLAGS} -o AVR_menu.o ../AVR_menu.c
	
sim_read.o : sim_read.c ../avr_main.h ../sfr_helper.h
	${CC} -c  ${CFLAGS} ${SFLAGS} -o sim_read.o sim_read.c

eeprom_burn.o : ../eeprom_burn.c ../avr_main.h ../sfr_helper.h ../main.h
	${CC} -c  ${CFLAGS} ${SFLAGS} -o eeprom_burn.o ../eeprom_burn.c

sim_read : AVR_menu.o sim_read.o t6963.o eeprom_burn.o
	${CC} ${CFLAGS} sim_read.o t6963.o AVR_menu.o eeprom_burn.o -o sim_read -lcurses
	
clean :
	rm -f *.o *~ *# core  a.out \
	sim_read

